        "summary": "recebe o código do aluno e sua respectiva foto (que é armazenada).",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id do aluno a quem pertence a foto",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "arquivo": {
                    "type": "string",
                    "description": "Arquivo da imagem do aluno (.png, .jpeg, .jpg)",
                    "format": "binary"
                  }
                }
              },
              "encoding": {
                "arquivo": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
